class LBlock

class LInstruction {
    var opcode: LOpcode = LOpcode::Abort;
    var operands: Array[LOperand] = Array[LOperand]::empty();
    var output_count: Int32 = 0;
    var input_count: Int32 = 0;
    var block: Option[LBlock] = None[LBlock];
}

enum LOpcode {
    Abort,
    Call,
    Ret,
}

enum LOperand {
    Virtual(Int32),
    Stack(Int32),
}
