//= vm-args "--gc=swiper --gc-verify"

class Foo(let x: Int32)

fun main() {
    let x = Array[Foo]::ofSizeUnsafe(16L * 1024L);
    std::forceCollect();
    assert(std::unsafeIsNull[Foo](x(0L)));

    x(0L) = Foo(1);
    std::forceMinorCollect();
    assert(x(0L).x == 1);

    x(16L * 1024L - 1L) = Foo(2);
    std::forceMinorCollect();
    assert(x(0L).x == 1);
    assert(x(16L * 1024L - 1L).x == 2);
}
