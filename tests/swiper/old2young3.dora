//= vm-args "--gc=swiper --gc-verify"

fun main() {
  let x = Foo(1I, nil);
  forceMinorCollect();
  x.next = Foo(2I, nil);
  // Promote x to old generation. Make sure that
  // promoted objects with references to young generations
  // are updated too.
  forceMinorCollect();
  assert(x.next.a == 2I);
}

class Foo(let a: Int32, var next: Foo)
