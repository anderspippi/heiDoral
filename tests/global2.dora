//= stdout "x = 1\ny = 2\nz = 3\n"

var x: Int32 = 0i32;
var y: Int32 = 0i32;
var z: Int32 = 0i32;

fn main() {
    init_globals();
    assert_globals();
    dump_globals();
}

fn init_globals() {
    x = 1i32;
    y = 2i32;
    z = 3i32;
}

fn assert_globals() {
    assert(x == 1i32);
    assert(y == 2i32);
    assert(z == 3i32);
}

fn dump_globals() {
    println("x = " + x.toString());
    println("y = " + y.toString());
    println("z = " + z.toString());
}
