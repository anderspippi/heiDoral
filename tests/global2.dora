//= stdout "x = 1\ny = 2\nz = 3\n"

var x: Int32 = 0I;
var y: Int32 = 0I;
var z: Int32 = 0I;

fn main() {
    init_globals();
    assert_globals();
    dump_globals();
}

fn init_globals() {
    x = 1I;
    y = 2I;
    z = 3I;
}

fn assert_globals() {
    assert(x == 1I);
    assert(y == 2I);
    assert(z == 3I);
}

fn dump_globals() {
    println("x = " + x.toString());
    println("y = " + y.toString());
    println("z = " + z.toString());
}
