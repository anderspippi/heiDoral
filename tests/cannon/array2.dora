fun main() {
  let array = createArray(5);

  assert(array.length() == 5L);
  assert(getLength(array) == 5L);
  
  setArray(array, 2, 50L);
  assert(array(2) == 50L);

  array(3) = 40L;
  assert(getArray(array, 3) == 40L);
}

@cannon fun createArray(a: Int32) -> Array[Int64] { return Array[Int64](a); }
@cannon fun getLength(a: Array[Int64]) -> Int64 { return a.length(); }
@cannon fun setArray(arr: Array[Int64], idx: Int32, value: Int64) { arr(idx) = value; }
@cannon fun getArray(arr: Array[Int64], idx: Int32) -> Int64 { return arr(idx); }