fun main() {
  let array = createArray(5I);

  assert(array.length() == 5);
  assert(getLength(array) == 5I);
  
  setArray(array, 2I, 50L);
  assert(array(2) == 50L);

  array(3) = 40L;
  assert(getArray(array, 3I) == 40L);
}

@cannon fun createArray(a: Int32) -> Array[Int64] { return Array[Int64](a.toInt()); }
@cannon fun getLength(a: Array[Int64]) -> Int32 { return a.length().toInt32(); }
@cannon fun setArray(arr: Array[Int64], idx: Int32, value: Int64) { arr(idx.toInt()) = value; }
@cannon fun getArray(arr: Array[Int64], idx: Int32) -> Int64 { return arr(idx.toInt()); }