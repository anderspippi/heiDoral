fun main() {
  let array = createArray(5);

  assert(array.length() == 5L);
  assert(getLength(array) == 5L);
  
  setArray(array, 2, 50);
  assert(array(2) == 50);

  array(3) = 40;
  assert(getArray(array, 3) == 40);
}

@cannon fun createArray(a: Int32) -> Array[Int32] { return Array[Int32](a); }
@cannon fun getLength(a: Array[Int32]) -> Int64 { return a.length(); }
@cannon fun setArray(arr: Array[Int32], idx: Int32, value: Int32) { arr(idx) = value; }
@cannon fun getArray(arr: Array[Int32], idx: Int32) -> Int32 { return arr(idx); }