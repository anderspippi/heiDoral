//= vm-args "--gc-verify"

enum Foo { A(Int32, String, Float32), B }

fn main() {
    let object = createArray();
    match object(0L) {
        Foo::A(a, b, c) => unreachable[()](),
        Foo::B => (),
    }
    std::forceCollect();
    match object(0L) {
        Foo::A(a, b, c) => unreachable[()](),
        Foo::B => (),
    }
    updateArray(object);
    std::forceMinorCollect();
    match object(0L) {
        Foo::A(a, b, c) => {
            assert(a == 112I);
            assert(b == "abc");
            assert(c == 17.5F);
        },
        Foo::B => unreachable[()](),
    }
}

fn createArray(): Array[Foo] {
    Array[Foo](Foo::B)
}

fn updateArray(object: Array[Foo]) {
    object(0L) = Foo::A(112I, "abc", 17.5F);
}
