//= vm-args "--gc-verify"

enum Foo { A(Int32, String, Float32), B }
class Bar(var foo: Foo)

fun main() {
    let object = Bar(Foo::B);
    std::forceCollect();
    updateObject(object);
    std::forceMinorCollect();
    assert(std::unsafeLoadEnumVariant[Foo](object.foo) == 0);
    assert(std::unsafeLoadEnumElement[Foo, Int32](object.foo, 0, 0) == 112);
    assert(std::unsafeLoadEnumElement[Foo, String](object.foo, 0, 1) == "abc");
    assert(std::unsafeLoadEnumElement[Foo, Float32](object.foo, 0, 2) == 17.5F);
}

fun updateObject(object: Bar) {
    object.foo = Foo::A(112, "abc", 17.5F);
}
