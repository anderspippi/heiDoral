fun main() {
    assert((1 + 3) == 4);
    assert((-1 + 3) == 2);
    assert((0 + 2) == 2);
    assert((2 + 0) == 2);

    let x = -5 + 4;
    assert(-1 == x);

    assert(+1 != -1);
    assert(+2 == 2);

    assert(!(-1) == 0);
    assert(!(-2) == 1);
    assert(-1 == !0);

    assert(true);
    assert(!false);

    let x = true;
    assert(x);

    let x = false;
    assert(!x);

    assert(10 == 1+(2+(3+4)));
    assert(-1 == 1-2);
    assert(3 == 2-(3-4));
    assert(-2 == 1-(2-(3-4)));
    assert(42 == 7*(1+(2+3)));

    assert(3 == 1|2);
    assert(1 == 1&3);
    assert(1 == 3^2);

    assert(6 == 2*3);
    assert(2 == 8/3);
    assert(0 == 9%3);

    assert(true == (true || true));
    assert(true == (true || false));
    assert(true == (false || true));
    assert(false == (false || false));

    assert(true == (true && true));
    assert(false == (true && false));
    assert(false == (false && true));
    assert(false == (false && false));
}
