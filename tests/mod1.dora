fun main() {
    assert(8 % 2 == 0);
    assert(7 % 2 == 1);
    assert((-3) % 2 == -1);
    assert((-2) % 2 == 0);

    assert(-7 % -2 == -1);
    assert(-7 % 2 == -1);
    assert(7 % -2 == 1);
    assert(7 % 2 == 1);

    assert(-7 / -2 == 3);
    assert(-7 / 2 == -3);
    assert(7 / -2 == -3);
    assert(7 / 2 == 3);
}
