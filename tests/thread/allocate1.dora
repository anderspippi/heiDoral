//= vm-args "--gc-young-size=64M --max-heap-size=128M"

class MyThread() extends std::Thread {
    @override fun run() {
        allocator();
        println("done");
    }
}

fun main() {
    var i = 0;

    while i < 1 {
        let thread = MyThread();
        thread.start();
        i = i + 1;
    }

    allocator();
    println("done");
}

fun allocator() {
    var i = 0;

    while i < 10_000 {
        Foo();
        i = i + 1;
    }
}

class Foo