//= stdout "done\ndone\n"
//= vm-args "--gc-young-size=64M --max-heap-size=128M"

class MyThread() : Thread {
    @override fun run() {
        allocator();
        println("done");
    }
}

fun main() {
    let thread = MyThread();
    thread.start();

    allocator();
    println("done");
}

fun allocator() {
    var i = 1I;
    var list = Foo(0I, nil);

    while i < 10_000I {
        list = Foo(i, list);
        i = i + 1I;
    }

    i = 10_000I;

    while i > 0I {
        i = i - 1I;
        assert(list.key == i);
        list = list.prev;
    }
}

class Foo(let key: Int32, let prev: Foo)