//= stdout "done\ndone\n"
//= vm-args "--gc-young-size=64M --max-heap-size=128M"

import std::Thread;

class MyThread() extends Thread {
    @override fun run() {
        allocator();
        println("done");
    }
}

fun main() {
    let thread = MyThread();
    thread.start();

    allocator();
    println("done");
}

fun allocator() {
    var i = 1;
    var list = Foo(0, None[Foo]);

    while i < 10_000 {
        list = Foo(i, Some[Foo](list));
        i = i + 1;
    }

    i = 10_000;

    while i > 1 {
        i = i - 1;
        assert(list.key == i);
        list = list.prev.unwrap();
    }

    assert(list.prev.isNone());
}

class Foo(let key: Int32, let prev: Option[Foo])