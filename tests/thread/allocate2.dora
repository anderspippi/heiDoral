//= vm-args "--gc-young-size=64M --max-heap-size=128M"
//= config region

fn main() {
    var i = 0i32;

    while i < 4i32 {
        std::thread::spawn(|| {
            allocator();
            println("done");
        });
        i = i + 1i32;
    }

    allocator();
    println("done");
}

fn allocator() {
    var i = 1i32;
    var list = Foo(0i32, None[Foo]);

    while i < 10_000i32 {
        list = Foo(i, Some[Foo](list));
        i = i + 1i32;
    }

    i = 10_000i32;

    while i > 1i32 {
        i = i - 1i32;
        assert(list.key == i);
        list = list.prev.getOrPanic();
    }

    assert(list.prev.isNone());
}

class_new Foo(key: Int32, prev: Option[Foo])