@open @abstract class Primitive {
    var surf: Surface;

    init() {
        self.surf = Surface();
    }

    fn setColor(r: Float64, g: Float64, b: Float64) {
        self.surf.color = Vec3(r, g, b);
    }

    @abstract fn normal(pnt: Vec3): Vec3;
    @abstract fn intersect(ry: Ray): Isect;
    @abstract fn toString(): String;
    @abstract fn getCenter(): Vec3;
    @abstract fn setCenter(c: Vec3);
}